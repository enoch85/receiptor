{
  "name": "receiptor",
  "version": "0.1.0",
  "private": true,
  "description": "The smart receipt tracker for households",
  "author": "Receiptor Team",
  "license": "MIT",
  "packageManager": "npm@9.8.1",
  "workspaces": [
    "mobile",
    "web",
    "shared",
    "supabase/functions/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install",
    "docker:up": "./docker/scripts/start.sh",
    "docker:down": "./docker/scripts/stop.sh",
    "docker:logs": "./docker/scripts/logs.sh",
    "docker:clean": "./docker/scripts/clean.sh",
    "docker:rebuild": "docker-compose -f docker/docker-compose.yml up -d --build",
    "test:gui": "./docker/scripts/start.sh && echo '\nðŸŽ‰ Open http://localhost:3000 to see the web app!'"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "turbo": "^2.5.8",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
